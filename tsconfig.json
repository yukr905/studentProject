{
    "compilerOptions": {
        "target": "es6",                          
        "module": "commonjs",   
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "build",   
        "sourceMap": true ,
        "esModuleInterop": true,
        "suppressImplicitAnyIndexErrors": false,
        "listFiles":false,
        "noEmitHelpers":false,
        "noImplicitReturns": true,
        "strict": true,
        "declaration": true,
        "emitDecoratorMetadata":false,
        "experimentalDecorators":false,
        "noImplicitUseStrict":false,
    },
    "include": ["*"]
}